<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="450.0" prefWidth="400.0" styleClass="root-pane" stylesheets="@booking.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelsystem.BookingController">
    <children>
        <Label fx:id="formLabel" layoutX="30.0" layoutY="30.0" styleClass="form-text" text="Form Pemesanan Kamar" />
        <Label fx:id="roomNumberLabel" layoutX="170.0" layoutY="30.0" styleClass="room-label" text="No: [101]" />
        <Label layoutX="30.0" layoutY="80.0" text="Nama Lengkap" />
        <TextField fx:id="guestNameField" layoutX="150.0" layoutY="76.0" prefWidth="220.0" />
        <Label layoutX="30.0" layoutY="115.0" text="Nomor Kontak" />
        <TextField fx:id="guestContactField" layoutX="150.0" layoutY="111.0" prefWidth="220.0" />
        <Label layoutX="30.0" layoutY="150.0" text="Tanggal Check-In" />
        <DatePicker fx:id="checkInPicker" editable="false" layoutX="150.0" layoutY="146.0" prefWidth="220.0" />
        <Label layoutX="30.0" layoutY="185.0" text="Tanggal Check-Out" />
        <DatePicker fx:id="checkOutPicker" editable="false" layoutX="150.0" layoutY="181.0" prefWidth="220.0" />
        <Label layoutX="30.0" layoutY="220.0" text="Metode Pembayaran" />
        <ComboBox fx:id="paymentMethodComboBox" layoutX="150.0" layoutY="216.0" prefWidth="220.0" promptText="Pilih Metode..." />
        <Label layoutX="30.0" layoutY="255.0" text="Nomor Tujuan" />
        <TextField fx:id="accountNumberField" disable="true" editable="false" layoutX="150.0" layoutY="251.0" prefWidth="220.0" styleClass="readonly-field" />
        <Label layoutX="30.0" layoutY="290.0" text="Total Pembayaran" />
        <TextField fx:id="paymentField" disable="true" editable="false" layoutX="150.0" layoutY="286.0" prefWidth="220.0" styleClass="readonly-field" />
        <Button fx:id="payButton" layoutX="30.0" layoutY="330.0" onAction="#onPayButtonAction" prefHeight="25.0" prefWidth="340.0" styleClass="action-button" text="Saya Sudah Membayar &amp; Pesan"/>
        <Button fx:id="downloadReceiptButton" disable="true" layoutX="30.0" layoutY="385.0" onAction="#onDownloadReceiptButtonAction" prefHeight="25.0" prefWidth="340.0" styleClass="download-button" text="Download Struk (.txt)" />
    </children>
</AnchorPane>
