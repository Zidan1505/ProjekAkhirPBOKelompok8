<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@receptionist.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelsystem.ReceptionistController">
    <children>
        <VBox fx:id="containerVBox" spacing="8.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" style="-fx-padding: 12;">
            <TableView fx:id="reservationTable" layoutX="-1.0" layoutY="-1.0" prefHeight="180.0" prefWidth="673.0">
                <columns>
                    <TableColumn fx:id="reservationIdColumn" prefWidth="40.0" text="ID" />
                    <TableColumn fx:id="roomNumberResColumn" prefWidth="50.0" text="Kamar" />
                    <TableColumn fx:id="guestNameColumn" prefWidth="120.0" text="Nama Tamu" />
                    <TableColumn fx:id="guestContactColumn" prefWidth="100.0" text="Kontak" />
                    <TableColumn fx:id="reservationDateColumn" prefWidth="90.0" text="Tgl Pesan" />
                    <TableColumn fx:id="checkInDateColumn" prefWidth="90.0" text="Check-In" />
                    <TableColumn fx:id="checkOutDateColumn" prefWidth="90.0" text="Check-Out" />
                </columns>
            </TableView>
            <TableView fx:id="roomTable" layoutY="191.0" prefHeight="180.0" prefWidth="673.0">
                <columns>
                    <TableColumn fx:id="roomNumberColumn" prefWidth="60.0" text="Kamar" />
                    <TableColumn fx:id="statusColumn" prefWidth="90.0" text="Status" />
                    <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Harga" />
                    <TableColumn fx:id="acColumn" prefWidth="40.0" text="AC" />
                    <TableColumn fx:id="singleBedColumn" prefWidth="75.0" text="Single Bed" />
                    <TableColumn fx:id="twinBedColumn" prefWidth="75.0" text="Twin Bed" />
                    <TableColumn fx:id="doubleBedColumn" prefWidth="83.0" text="Double Bed" />
                    <TableColumn fx:id="checkStatusColumn" prefWidth="88.5" text="Status Check" />
                    <TableColumn fx:id="adminIdColumn" prefWidth="98.5" text="Admin ID" />
                </columns>
            </TableView>
            <HBox spacing="16.0" alignment="CENTER_RIGHT">
                <Button fx:id="checkInButton" layoutX="5.0" layoutY="374.0" mnemonicParsing="false" onAction="#onCheckInButtonAction" prefHeight="25.0" prefWidth="293.0" text="Check-In" />
                <Button fx:id="checkOutButton" layoutX="380.0" layoutY="374.0" mnemonicParsing="false" onAction="#onCheckOutButtonAction" prefHeight="25.0" prefWidth="293.0" text="Check-Out" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
