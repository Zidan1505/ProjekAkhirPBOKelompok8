<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="452.0" prefWidth="400.0" stylesheets="@updateHousekeeping.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelsystem.UpdateHousekeepingController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="449.0" prefWidth="400.0" spacing="10.0" styleClass="housekeeping-form">
            <children>
                <Label fx:id="titleLabel" styleClass="form-title" text="Kelola Record Housekeeping" />

                <Label styleClass="label" text="ID Record (Otomatis)" />
                <TextField fx:id="recordIdField" disable="true" promptText="ID akan dibuat otomatis" styleClass="text-field" />

                <Label styleClass="label" text="ID Housekeeper" />
                <ComboBox fx:id="housekeeperIdComboBox" promptText="Pilih ID housekeeper" styleClass="combo-box" />

                <Label styleClass="label" text="Nomor Kamar" />
                <ComboBox fx:id="roomNumberComboBox" promptText="Pilih nomor kamar" styleClass="combo-box" />

                <Label styleClass="label" text="Tanggal Record" />
                <DatePicker fx:id="recordDatePicker" styleClass="date-picker" />

                <Label styleClass="label" text="Catatan (Notes)" />
                <TextArea fx:id="notesArea" prefHeight="100.0" promptText="Masukkan catatan..." styleClass="text-area" />

                <Button fx:id="saveButton" onAction="#onSaveButtonAction" prefHeight="35.0" prefWidth="370.0" styleClass="save-button" text="Simpan">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
