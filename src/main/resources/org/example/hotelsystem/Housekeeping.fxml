<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="700.0" prefWidth="1000.0" styleClass="anchor-pane" stylesheets="@houseKeeping.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotelsystem.HousekeepingController">
   <children>
      <TableView fx:id="maintenanceRoomTable" prefHeight="200.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <columns>
            <TableColumn fx:id="roomNumberColumn" prefWidth="150.0" text="Nomor Kamar" />
            <TableColumn fx:id="statusColumn" prefWidth="200.0" text="Status Saat Ini" />
            <TableColumn fx:id="checkStatusColumn" prefWidth="300.0" text="Status Check" />
         </columns>
      </TableView>

      <Label layoutX="20.0" layoutY="230.0" prefHeight="23.0" prefWidth="250.0" text="Ubah Status Kamar Menjadi" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="230.0">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>

      <ComboBox fx:id="changeStatusComboBox" prefHeight="25.0" promptText="Pilih status baru..." AnchorPane.leftAnchor="270.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="230.0" />

      <Label prefHeight="23.0" prefWidth="150.0" text="Catatan" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="270.0">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>

      <TextArea fx:id="catatanTextArea" prefHeight="141.0" prefWidth="960.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="300.0" />

      <Button fx:id="cancelButton" layoutX="22.0" layoutY="453.0" onAction="#onCancelButtonAction" prefHeight="35.0" prefWidth="470.0" text="Cancel" />

      <Button fx:id="sendButton" layoutX="512.0" layoutY="453.0" onAction="#onSendButtonAction" prefHeight="35.0" prefWidth="470.0" text="Update Status &amp; Kirim Catatan" />
   </children>
</AnchorPane>
